@model ResetPasswordVM

@section css {
    <link rel="stylesheet" href="~/assets/css/login.css" />
}


<main>
    <section id="login-area" style="background-image: url('/assets/images/login-background.jpg');">
        <div class="wrapper">
            <form method="post" asp-controller="Account" asp-action="ResetPassword">
                <h1>Şifrəni bərpa et</h1>
                <div class="text-danger errors" asp-validation-summary="ModelOnly"></div>
                <div class="input-box">
                    <input asp-for="Password" placeholder="Yeni şifrə">
                    <i class="fa-solid fa-user"></i>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="input-box">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Şifrəni təsdiqləyin">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <input type="hidden" asp-for="Token" value="@Model.Token" />
                <input type="hidden" asp-for="UserId" value="@Model.UserId" />
                <button type="submit" class="btn">Göndər</button>

            </form>
        </div>
    </section>
</main>
