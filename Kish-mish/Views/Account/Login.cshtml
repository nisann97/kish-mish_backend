@model LoginVM

@section css {
    <link rel="stylesheet" href="~/assets/css/login.css" />
}


<main>
    <section id="login-area" style="background-image: url('/assets/images/login-background.jpg');">
        <div class="wrapper">
            <form method="post" asp-action="Login">
                <h1>Daxil ol</h1>
                <div class="text-danger errors" asp-validation-summary="ModelOnly"></div>
                <div class="input-box">
                    <input asp-for="EmailOrUsername" placeholder="Email və ya istifadəçi adı">
                    <i class="fa-solid fa-user"></i>
                    <span class="text-danger" asp-validation-for="EmailOrUsername"></span>

                </div>
                <div class="input-box">
                    <input asp-for="Password" placeholder="Şifrə">
                    <i class="fa-solid fa-lock"></i>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="remember-forgot">
                    <a asp-controller="Account" asp-action="ForgotPassword">Şifrəni unutmusunuz?</a>
                </div> 
                <button type="submit" class="btn">Daxil ol</button>
                <div class="register-link">
                    <p>Hesabınız yoxdur? <a asp-controller="Account" asp-action="Register">Qeydiyyatdan keçin</a></p>
                </div>
            </form>
        </div>
    </section>
</main>
