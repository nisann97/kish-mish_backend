@model HomeVM


@{
    ViewData["Title"] = "Home Page";
}

@section css {
    <link rel="stylesheet" href="~/assets/css/home.css" />
}

<main>

    <!-- slider starts -->

    <section id="slider-area">
        <div class="container">
            <div class="slider">
                <div class="icons">
                    <i class="fa-solid fa-chevron-left left-icon"></i>
                    <i class="fa-solid fa-chevron-right right-icon"></i>
                </div>
                <div class="images">

                    @foreach (var item in Model.Sliders)
                    {
                        string active = "active-image";

                        if (item != Model.Sliders.FirstOrDefault())
                        {
                            active = "";
                        }


                        <img src="~/assets/images/@item.Image" class="@active">
                    }

                    @*<img src="~/assets/images/slider1.png">
                        <img src="~/assets/images/slider4.png">*@
                </div>

            </div>

        </div>

    </section>
    <!-- slider ends -->
    <!-- PRODUCTS START -->

    <section id="products">
        <div class="container">
            <div class="row pt-5">
                <div class="col-12 d-flex justify-content-between">
                    <ul class="category-mobile d-md-none list-unstyled">
                        <li>
                            <a href="" class="categories mr-2">Categories</a>
                            <i class="fas fa-caret-down"></i>
                            <ul class="categories list-unstyled" style="display: none;">
                                <li><a href="" data-id="popular">Çərəzlər</a></li>
                                <li><a href="" data-id="winter">Şokoladlar</a></li>
                                <li><a href="" data-id="various">Meyvə quruları</a></li>
                                <li><a href="" data-id="exotic">Duzlu təamlar</a></li>
                                <li><a href="" data-id="green">Kish-Mish qutuları</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="category d-none d-md-flex list-unstyled">

                        @foreach (var item in Model.Categories.Take(7))
                        {
                            <li><a data-id="@item.Id" href="">@item.Name</a></li>


                        }
                    </ul>
                </div>
            </div>
            <div class="tab-content">
                <div class="tab-pane fade show p-0 active">
                    <div class="row">
                        @foreach (var item in Model.Products.Take(8))

                        {
                            <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                                <div class="product-item text-center" data-id="@item.CategoryId">
                                    <div class="img">
                                        <a href="">
                                            <img src="~/assets/images/@item.ProductImages.FirstOrDefault(m=>m.IsMain).Image" class="img-fluid" alt="">
                                        </a>

                                    </div>
                                    <div class="title mt-3">
                                        <h6>@item.Name</h6>
                                    </div>
                                    <div class="price">
                                        <a data-id="@item.Id"><span class="add-to-basket text-black-50">Səbətə əlavə et</span></a>
                                        <span class="text-black-50">@item.Price₼</span>
                                    </div>
                                </div>
                            </div>
                        }
                               
                 
                        <div class="show-btn mt-5">
                            <button>Daha çox</button>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

