@model AboutEditVM

<div class="container">
    <div class="card">
        <div class="card-header">
            <strong class="text-success">Edit About text</strong>
        </div>
        <div class="card-body card-block">
        
            <form asp-action="Edit" method="post" class="mt-4" enctype="multipart/form-data">
                <div class="form-group">
                    <label class=" form-control-label">Enter about text</label>
                  
                    <input asp-for="Description" type="text" placeholder="Enter here..." class="form-control  mb-2" maxlength="100">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                </button>
                <a type="reset" asp-action="Index" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Back
                </a>
            </form>
        </div>
    </div>
</div>

